<h1>Total Friends: {{model.length}}</h1>
<table class="primary">
<thead>
	<tr>
		<th>Name</th>
		<th>Articles</th>
		<th>Action</th>
		<th>id</th>
	</tr>
</thead>

<tbody>
	{{#each model as | friend |}}
	<tr>
		<td>{{link-to friend.fullName "articles" friend}}</td>
		<td>{{friend.totalArticles}}</td>
		<td><a href="#" {{action "delete" friend}}>Delete</a></td>
		<td>{{friend.id}}</td>
	</tr>
	{{/each}}
</tbody>

</table>