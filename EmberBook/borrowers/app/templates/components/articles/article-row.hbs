<<!--
inputs required: article and articleStates 
-->

<td>{{article.description}}</td>
<td>{{article.notes}}</td>
<td>{{formatted-date article.createdAt 'LL'}}</td>
<!-- <td>{{article.createdAt}}</td> -->
<td>{{view "select" content=articleStates selection=artilce.state}}</td>
<td>
   {{#if article.isSaving}}
      <p>Saving...</p>
   {{else if article.isDirty}}
      <button {{action "saveArticle" article}}>Save</button>
      <!-- saveArticle is defined in article-row.js -->
   {{/if}}
</td>
